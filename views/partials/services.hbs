<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
  <section id="services_section" class="py-2">
    <div class="container">
      <h2 class="text-center">Services we provide</h2>
      <div class="row">
      {{#each services}}
        <div class="col-md-3 mt-3">
          <div class="card" style="width: 18rem;">
            <img src= {{this.imageUrl}}   class="card-img-top" alt="..." />     
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.desription}}</p>
              <a href={{this.linkText}} class="btn btn-primary" >{{this.link}}</a>
            </div>
          </div>
        </div>
        {{/each}}
       </div>
      </div>
    </section>
    <script
      src="https://images.unsplash.com/photo-1707655096635-89387f83f189?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzfHx8ZW58MHx8fHx8ps://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>